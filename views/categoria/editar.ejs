                            <label for="categoria">Categoria</label>
                            <input  type="categoria" class="form-control" name="categoria" value="<%= categoria.categoria %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </form>
                    </div>
                    <div class="col-md-4"></div>
                </div>
</body>
