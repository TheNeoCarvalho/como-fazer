<%- include('../header') %>
          <div class="row text-center">
                <div class="col-md-12">
                <h2>Nova Categoria</h2>
                  <a href="/categoria"><i class="fas fa-back"></i></a>
                </div>
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
